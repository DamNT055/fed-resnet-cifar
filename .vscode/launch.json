    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        },
        {
            "name": "Run FedAvg (alpha=0.05)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/models/main.py",
            "cwd": "${workspaceFolder}/models",
            "console": "integratedTerminal",
            "args": [
              "-dataset", "cifar10",
              "--num-rounds", "10000",
              "--eval-every", "100",
              "--batch-size", "64",
              "--num-epochs", "1",
              "--clients-per-round", "5",
              "-model", "resnet9",
              "-lr", "0.01",
              "--weight-decay", "0.0004",
              "-device", "mps",
              "-algorithm", "fedopt",
              "--server-lr", "1",
              "--server-opt", "sgd",
              "--num-workers", "2",
              "--where-loading", "init",
              "-alpha", "0.05"
            ]
          }
    ]
}